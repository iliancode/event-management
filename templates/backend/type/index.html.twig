{% extends 'base.html.twig' %}

{% block title %}Les types{% endblock %}

{% block body %}
    <h1>Les types ({{ types.totalItemCount }})</h1>
    <section class="py-3">
        <div class="row">
            <div class="col">
                <a class="btn btn-secondary" href="{{ path('app.types.create') }}">Ajouter une type</a>
            </div>
        </div>
    </section>
    <section class="py-3">
        {% include 'backend/type/_list.html.twig' with { types: types } %}
    </section>
{% endblock %}
