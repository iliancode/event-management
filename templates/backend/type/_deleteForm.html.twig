<form method="post"
      action="{{ path('app.types.delete', {'id': type.id}) }}"
      onsubmit="return confirm('Voulez-vous vraiment supprimer cette type ?');"
    >
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ type.id) }}">
    <button type="submit" class="btn"><i class="bi bi-trash3-fill text-danger"></i></button>
</form>