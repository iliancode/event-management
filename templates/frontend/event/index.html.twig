{% extends 'base.html.twig' %}

{% block title %}Les events{% endblock %}

{% block body %}
    <h1>Les events ({{ events|length }})</h1>
    <section class="py-3">
        <div class="row">
            <div class="col">
                <a class="btn btn-secondary" href="{{ path('app.events.create') }}">Ajouter une event</a>
            </div>
        </div>
    </section>
    <section class="py-3">
        {% include 'frontend/event/_list.html.twig' with { events: events } %}
    </section>
{% endblock %}
