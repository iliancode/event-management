{% extends 'base.html.twig' %}

{% block title %}{{ event.title }}{% endblock %}

{% block body %}
    <div class="container mt-3 mb-5">
        {% include 'frontend/event/_card.html.twig' with { event: event, full: true } %}
        <section class="mt-3">
            <h2> Les participants ({{ event.nbRealParticipants }}) (max : {{ event.getMaxParticipants }})</h2>
            {% for eventParticipation in event.eventParticipations %}
                {% include 'frontend/event_participation/_card.html.twig' with { eventParticipation: eventParticipation } %}
            {% endfor %}
        </section>
    </div>
{% endblock %}

