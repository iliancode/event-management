<div class="card">
    <div class="card-body">
        <h5 class="card-title">{{ eventParticipation.id }}</h5>
        <p class="card-text">{{ eventParticipation.event.title }}</p>
        {% if eventParticipation.user %}
            <p class="card-text">{{ eventParticipation.user.username }}</p>
        {% else %}
            <p class="card-text">{{ eventParticipation.fullname }}</p>
        {% endif %}
        <p class="card-text">{{ eventParticipation.banned ? 'Banned' : 'Not banned' }}</p>
    </div>
</div>