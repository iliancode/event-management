<form method="post"
      action="{{ path('app.event_participations.delete', {'id': eventParticipation.id}) }}"
      onsubmit="return confirm('Voulez-vous vraiment supprimer cette participation ?');"
    >
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ eventParticipation.id) }}">
    <button type="submit" class="btn btn-danger btn-xs">Supprimer</button>
</form>